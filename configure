#!/usr/bin/env bash
which cmake &> /dev/null
if [[ $? -ne 0 ]]; then
	echo "CMake is needed to build bluray_info."
	echo
	echo "For cmake, run:"
	echo "cmake ."
	echo "make"
	echo "sudo make install"
	echo
	echo "See https://github.com/beandog/bluray_info/wiki for more info"
else
	echo "CMake is needed to build bluray_info."
	echo "Run cmake ."
fi
